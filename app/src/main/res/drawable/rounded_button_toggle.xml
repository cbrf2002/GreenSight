<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="60dp" />
            <solid android:color="@color/aWhite" />
            <stroke android:color="@color/halfGray"/>
            <stroke android:width="2dp"/>
        </shape>
    </item>
    <item android:state_selected="true"> <!-- Handle selected state -->
        <shape android:shape="rectangle">
            <corners android:radius="60dp" />
            <solid android:color="@color/aGreen" />
            <stroke android:color="@color/halfGray"/>
            <stroke android:width="2dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="60dp" />
            <solid android:color="@color/aWhite" />
            <stroke android:color="@color/halfGray"/>
            <stroke android:width="2dp"/>
        </shape>
    </item>
</selector>
